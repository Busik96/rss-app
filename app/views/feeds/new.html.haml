.row.justify-content-center.align-items-center.min-vh-100
  .col-sm-12.col-md-6.p-4
    .jumbotron.text-center
      %h4.text-primary
        Add RSS link!
      %i.fas.fa-arrow-down.fa-3x.m-4.gray
      = form_for(@new_feed, url: feeds_path) do |f|
        .input-group
          = f.text_field :url, placeholder: 'Paste your RSS link...', class: 'form-control'
          .input-group-append
            = f.submit 'Add', class: 'btn btn-primary text-white'
